{
  "name": "code-to-prompt",
  "displayName": "Code To Prompt",
  "description": "Transform your code into AI-ready prompts! Easily convert your codebase into structured prompts for Large Language Models (LLMs).",
  "version": "1.0.1",
  "icon": "assets/icon.png",
  "publisher": "aatitkarki",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aatitkarki/code-to-prompt.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "code",
    "prompt",
    "ai",
    "llm",
    "code-to-prompt"
  ],
  "activationEvents": [
    "onView:codeToPromptExplorer",
    "onView:codeToPromptSettings",
    "onView:codeToPromptPresets",
    "onCommand:codeToPrompt.copyPrompt",
    "onCommand:codeToPrompt.openDashboard",
    "onCommand:codeToPrompt.selectOpenEditors",
    "onCommand:codeToPrompt.resetSelection",
    "onCommand:codeToPrompt.reloadFiles",
    "onCommand:codeToPrompt.importFromClipboard"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeToPrompt",
          "title": "Code to Prompt",
          "icon": "assets/icon.png"
        }
      ]
    },
    "views": {
      "codeToPrompt": [
        {
          "id": "codeToPromptExplorer",
          "name": "Files"
        },
        {
          "type": "webview",
          "id": "codeToPromptSettings",
          "name": "Settings"
        },
        {
          "type": "webview",
          "id": "codeToPromptPresets",
          "name": "Presets"
        }
      ]
    },
    "commands": [
      {
        "command": "codeToPrompt.copyPrompt",
        "title": "Code to Prompt: Copy Prompt",
        "icon": "$(copy)"
      },
      {
        "command": "codeToPrompt.openDashboard",
        "title": "Code to Prompt: Open Dashboard",
        "icon": "$(play)"
      },
      {
        "command": "codeToPrompt.selectOpenEditors",
        "title": "Code to Prompt: Select Open Editors"
      },
      {
        "command": "codeToPrompt.resetSelection",
        "title": "Code to Prompt: Reset Selection",
        "icon": "$(clear-all)"
      },
      {
        "command": "codeToPrompt.reloadFiles",
        "title": "Code to Prompt: Reload Files",
        "icon": "$(refresh)"
      },
      {
        "command": "codeToPrompt.importFromClipboard",
        "title": "Code to Prompt: Import Prompt from Clipboard",
        "icon": "$(cloud-download)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codeToPrompt.openDashboard",
          "when": "view == codeToPromptExplorer",
          "group": "navigation@0"
        },
        {
          "command": "codeToPrompt.reloadFiles",
          "when": "view == codeToPromptExplorer",
          "group": "navigation@1"
        },
        {
          "command": "codeToPrompt.copyPrompt",
          "when": "view == codeToPromptExplorer",
          "group": "navigation@2"
        },
        {
          "command": "codeToPrompt.importFromClipboard",
          "when": "view == codeToPromptExplorer",
          "group": "navigation@3"
        },
        {
          "command": "codeToPrompt.resetSelection",
          "when": "view == codeToPromptExplorer",
          "group": "navigation@4"
        }
      ]
    },
    "configuration": {
      "title": "Code to Prompt",
      "properties": {
        "codeToPrompt.defaultFormat": {
          "type": "string",
          "enum": [
            "markdown",
            "xml",
            "json"
          ],
          "default": "markdown",
          "description": "The default output format (markdown, xml, json)."
        },
        "codeToPrompt.includeLineNumbers": {
          "type": "boolean",
          "default": false,
          "description": "Add line numbers to the output code blocks."
        },
        "codeToPrompt.includeTreeStructure": {
          "type": "boolean",
          "default": false,
          "description": "Include a folder tree structure overview in the generated prompt (markdown/json)."
        },
        "codeToPrompt.respectGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Respect .gitignore rules when building the Files tree. Turn off to override .gitignore and show ignored files."
        },
        "codeToPrompt.ignorePatterns": {
          "type": "string",
          "default": "",
          "description": "Additional ignore patterns (one per line, .gitignore-style globs) applied on top of binary filters and optional .gitignore."
        },
        "codeToPrompt.tokenBudget": {
          "type": "number",
          "default": 32000,
          "description": "The warning threshold for the token counter."
        },
        "codeToPrompt.headerPrompt": {
          "type": "string",
          "default": "",
          "description": "Optional header instructions to prepend to every generated prompt (e.g. 'This is my current code, help me fix this bug...')."
        },
        "codeToPrompt.footerPrompt": {
          "type": "string",
          "default": "",
          "description": "Optional footer instructions to append to every generated prompt (e.g. 'Always output in the same format I have provided you')."
        },
        "codeToPrompt.appendStandardFooterNote": {
          "type": "boolean",
          "default": true,
          "description": "Append the standard note: 'Always output in same format as provided. Only provide new or files that requires update' to the footer."
        },
        "codeToPrompt.requireImportConfirmation": {
          "type": "boolean",
          "default": true,
          "description": "Require a confirmation dialog listing new and updated files before importing prompt content into the workspace."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "bundle": "webpack --config webpack.config.js",
    "compile": "tsc -p ./",
    "watch": "tsc -p ./ --watch",
    "test": "echo \"No tests yet\""
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "copy-webpack-plugin": "^11.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.0.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "ignore": "^5.3.0",
    "tiktoken": "^1.0.0"
  }
}