{
  "name": "code-prompt-assistant",
  "displayName": "Code To Prompt Assistant",
  "description": "A VS Code extension to help you convert your code to AI prompts",
  "version": "0.0.7",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/aatitkarki/code-to-prompt.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "publisher": "aatitkarki",
  "author": {
    "name": "Aatit Karki"
  },
  "license": "MIT",
  "keywords": [
    "code",
    "prompt",
    "ai",
    "llm",
    "code-to-prompt"
  ],
  "contributes": {
    "commands": [
      {
        "command": "code-prompt.updateSeparator",
        "title": "Update Separator"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-prompt-explorer",
          "title": "Code To Prompt Explorer",
          "icon": "assets/logo.png"
        }
      ]
    },
    "views": {
      "code-prompt-explorer": [
        {
          "type": "webview",
          "id": "code-prompt-directory",
          "name": "Directory List"
        },
        {
          "type": "webview",
          "id": "code-prompt-selected-files",
          "name": "Selected Files"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.19.2",
    "@eslint/object-schema": "^2.1.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vscode/test-electron": "^2.3.4",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.45.0",
    "glob": "^11.0.1",
    "mocha": "^10.2.0",
    "path-browserify": "^1.0.1",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "tiktoken": "^1.0.20"
  }
}
